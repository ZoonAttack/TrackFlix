@using TrackFlix.Data
@model HomeViewModel
@{
    Layout = "_CollectionLayout";
	ViewData["Title"] = "TrackFlix - Home";
	ViewData["Description"] = "Discover trending movies and shows, personalized recommendations, and more on TrackFlix.";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TrackFlix - Home</title>
    <link rel="stylesheet" href="~/css/Home.css" />
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/ajaxHandler.js"></script>
        <script>
            function scrollSlider(id, direction, amount = 150 * 10) {
                const slider = document.getElementById(id);
                slider.scrollBy({ left: amount * direction, behavior: 'smooth' });
            }
        </script>
</head>
<body>
    <main class="main-content">
        <div class="trending-section">
            <section class="left-section">
                <!-- Trending Movies -->
                <div class="section-title">Trending Movies</div>
                <div class="slider-container">
                    <button class="slider-btn left" onclick="scrollSlider('movies', -1)"><i class="fas fa-chevron-left"></i></button>
                    <div class="card-slider" id="movies">
                        @foreach (var movie in Model.TrendingMovies)
                        {
                            <div class="card" data-movie-id="@movie.Id">
                                <img src="@movie.PosterURL" alt="@movie.Title" />
                                <div class="card-title">@movie.Title</div>
                            </div>

                        }
                    </div>
                    <button class="slider-btn right" onclick="scrollSlider('movies', 1)"><i class="fas fa-chevron-right"></i></button>
                </div>

                <!-- Trending Shows -->
                <div class="section-title" style="margin-top: 2rem;">Trending Shows</div>
                <div class="slider-container">
                    <button class="slider-btn left" onclick="scrollSlider('shows', -1)"><i class="fas fa-chevron-left"></i></button>
                    <div class="card-slider" id="shows">
                        @foreach (var show in Model.TrendingShows)
                        {
                            <div class="card" data-show-id="@show.Id">
                                <img src="@show.PosterURL" alt="@show.Title" />
                                <div class="card-title">@show.Title</div>
                            </div>
                        }
                    </div>
                    <button class="slider-btn right" onclick="scrollSlider('shows', 1)"><i class="fas fa-chevron-right"></i></button>
                </div>
            </section>

            <!-- Recommended Section -->
            <section class="recommended-section">
                <!-- Recommended Movies -->
                <div class="recommended-column">
                    <div class="section-title">Top Recommended Movies</div>
                    <div class="slider-container small">
                        <button class="slider-btn left" onclick="scrollSlider('rec-movies', -1, 150 * 3)"><i class="fas fa-chevron-left"></i></button>
                        <div class="card-slider small" id="rec-movies">
                            @foreach (var movie in Model.RecommendedMovies)
                            {
                                <div class="card" data-movie-id="@movie.Id">
                                    <img src="@movie.PosterURL" alt="@movie.Title" />
                                    <div class="card-title">@movie.Title</div>
                                </div>
                            }
                        </div>
                        <button class="slider-btn right" onclick="scrollSlider('rec-movies', 1, 150 * 3)"><i class="fas fa-chevron-right"></i></button>
                    </div>
                </div>

                <!-- Recommended Shows -->
                <div class="recommended-column">
                    <div class="section-title">Top Recommended Shows</div>
                    <div class="slider-container small">
                        <button class="slider-btn left" onclick="scrollSlider('rec-shows', -1, 150 * 3)"><i class="fas fa-chevron-left"></i></button>
                        <div class="card-slider small" id="rec-shows">
                            @foreach (var show in Model.RecommendedShows)
                            {
                                <div class="card" data-show-id="@show.Id">
                                    <img src="@show.PosterURL" alt="@show.Title" />
                                    <div class="card-title">@show.Title</div>
                                </div>
                            }
                        </div>
                        <button class="slider-btn right" onclick="scrollSlider('rec-shows', 1, 150 * 3)"><i class="fas fa-chevron-right"></i></button>
                    </div>
                </div>
            </section>
        </div>
    </main>
</body>
</html>
