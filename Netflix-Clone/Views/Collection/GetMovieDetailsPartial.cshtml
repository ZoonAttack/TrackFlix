@{
    Layout = null;
}
@model TrackFlix.Data.Movie
<link rel="stylesheet" href="~/css/partials/GetDetails.css" />
    <h2>@Model.Title</h2>
    <img src="@Model.PosterURL" alt="@Model.Title" />
    <p>@Model.Description</p>
    <p><strong>Language:</strong> @Model.Language</p>
    <p><strong>Rating:</strong> @Model.Rating</p>
    <p><strong>Release Date:</strong> @Model.ReleaseDate</p>
    <div class="modal-actions">
        <button class="action-btn movie-add-list-btn" data-id="@Model.Id">
            <i class="fas fa-plus"></i> My List
        </button>
        <a class="action-btn movie-data-btn" asp-action="GetMoviePage" asp-controller="Collection" asp-route-movieId =@Model.Id>
            Details
        </a>
    </div>