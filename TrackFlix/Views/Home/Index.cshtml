@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = "";
}
<html>
<head>
    <meta name="description" content="TrackFlix helps you manage and track your movies and shows." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/LandingPage.css" />
    <link rel="stylesheet"
          href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
          integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
          crossorigin="anonymous" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
          // Unified Language Change Logic
          const langSelectors = document.querySelectorAll(".language__drop__down, .netflix-lang");
          langSelectors.forEach(selector => {
            selector.innerHTML = '<option value="English">English</option><option value="العربية">العربية</option>';
            selector.addEventListener("change", function () {
              const selectedLang = this.value;
              changeLanguage(selectedLang);
            });
          });

          function changeLanguage(lang) {
            const replacements = {
              English: {
                title: "Track Your Favorite Movies,<br />TV Shows, and More",
                subtitle: "Organize. Discover. Watch.",
                description: "Ready to start tracking? Enter your email to create or restart your membership.",
                joinHeading: "More Reasons to Join",
                joinCards: [
                  ["Enjoy on your TV", "Watch on Smart TVs, Playstation, Xbox, Chromecast, Apple TV, Blu-ray players, and more."],
                  ["Download your shows to watch offline", "Save your favorites easily and always have something to watch."],
                  ["Watch everywhere", "Stream unlimited movies and TV shows on your phone, tablet, laptop, and TV."],
                  ["Create profiles for kids", "Send kids on adventures with their favorite characters — free with your membership."]
                ],
                faqHeading: "Frequently Asked Questions",
                faqTitles: [
                  "What is TrackFlix?",
                  "How much does TrackFlix cost?",
                  "Where can I watch?",
                  "How do I cancel?",
                  "What can I watch from TrackFlix?",
                  "Is TrackFlix good for kids?"
                ],
                faqTexts: [
                  ["TrackFlix is a service that helps you manage your TV shows, movies, anime, and documentaries across statuses like Watched, Dropped, or Plan to Watch.", "You can organize everything in one place, across all your devices."],
                  ["TrackFlix is free to use and always will be. Just sign up and start organizing!"],
                  ["Track anywhere on your phone, tablet, or computer. All your data is synced online."],
                  ["You can remove your account at any time directly from your profile page. No commitments."],
                  ["TrackFlix helps you log all types of content — movies, series, documentaries, anime, and more."],
                  ["TrackFlix helps you create lists for kids too, to keep their watchlist separate and safe."]
                ],
                faqPrompt: "Ready to watch? Enter your email to create or restart your membership.",
                footer: "TrackFlix"
              },
              "العربية": {
                title: "تابع أفلامك ومسلسلاتك المفضلة<br />والمزيد",
                subtitle: "نظم. اكتشف. شاهد.",
                description: "هل أنت مستعد للبدء؟ أدخل بريدك لإنشاء حسابك أو استئنافه.",
                joinHeading: "المزيد من الأسباب للانضمام",
                joinCards: [
                  ["استمتع على التلفاز", "شاهد على أجهزة التلفزيون الذكية، بلايستيشن، إكس بوكس، كروم كاست، أبل تي في، مشغلات البلوراي والمزيد."],
                  ["نزّل عروضك لتشاهدها لاحقاً", "احفظ مفضلاتك بسهولة دائمًا لتجد ما تشاهده."],
                  ["شاهد في كل مكان", "استمتع بالأفلام والعروض على هاتفك أو جهازك اللوحي أو الكمبيوتر أو التلفاز."],
                  ["أنشئ ملفات لأطفالك", "اترك أطفالك في مغامراتهم مع شخصياتهم المفضلة — مجانًا ضمن عضويتك."]
                ],
                faqHeading: "الأسئلة الشائعة",
                faqTitles: [
                  "ما هو TrackFlix؟",
                  "كم تكلفة TrackFlix؟",
                  "أين يمكنني المشاهدة؟",
                  "كيف ألغي الاشتراك؟",
                  "ما الذي يمكنني مشاهدته من TrackFlix؟",
                  "هل TrackFlix مناسب للأطفال؟"
                ],
                faqTexts: [
                  ["TrackFlix هو خدمة تساعدك في إدارة الأفلام والعروض والأنمي والوثائقيات حسب الحالة.", "نظم كل شيء في مكان واحد عبر جميع أجهزتك."],
                  ["TrackFlix مجاني تمامًا للاستخدام وسيبقى كذلك. فقط أنشئ حسابًا وابدأ التنظيم!"],
                  ["تتبع كل شيء من هاتفك أو جهازك اللوحي أو الكمبيوتر. تتم مزامنة جميع بياناتك عبر الإنترنت."],
                  ["يمكنك حذف حسابك في أي وقت من صفحة ملفك الشخصي. لا توجد التزامات."],
                  ["TrackFlix يساعدك على تسجيل كل أنواع المحتوى — أفلام، مسلسلات، وثائقيات، أنمي وأكثر."],
                  ["يمكنك إنشاء قوائم مخصصة للأطفال لإبقاء محتواهم منفصلًا وآمنًا."]
                ],
                faqPrompt: "هل أنت مستعد؟ أدخل بريدك لإنشاء أو استئناف عضويتك.",
                footer: "تراك فليكس"
              }
            };

            const t = replacements[lang];
            document.querySelector(".hero__title").innerHTML = t.title;
            document.querySelector(".hero__subtitle").textContent = t.subtitle;
            document.querySelector(".hero__description").textContent = t.description;
            document.querySelector(".join__heading").textContent = t.joinHeading;

            const joinCards = document.querySelectorAll(".join__card");
            joinCards.forEach((card, index) => {
              card.querySelector("h3").textContent = t.joinCards[index][0];
              card.querySelector("p").textContent = t.joinCards[index][1];
            });

            const faqHeading = document.querySelector(".FAQ__heading");
            if (faqHeading) faqHeading.textContent = t.faqHeading;

            const faqTitles = document.querySelectorAll(".FAQ__title .faq-q");
            faqTitles.forEach((span, idx) => {
              span.textContent = t.faqTitles[idx];
            });

            const faqAnswers = document.querySelectorAll(".FAQ__visible");
            faqAnswers.forEach((div, idx) => {
              div.innerHTML = t.faqTexts[idx].map(line => `<p>${line}</p>`).join("");
            });
          }
        });
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap"
          rel="stylesheet" />
    <title>TrackFlix - Track Your Shows and Movies</title>
    <link rel="icon"
          href="http://pngimg.com/uploads/netflix/small/netflix_PNG15.png" />
</head>
<body>
    <header>
        <nav class="netflix-navbar">
            <div class="navbar-left">
                <a class="netflix-logo"> TrackFlix</a>
            </div>
            <div class="navbar-right">
                <select class="netflix-lang">
                    <option>English</option>
                    <option>العربية</option>
                </select>
                <a asp-action="Login" asp-controller="Home" class="signin-btn">Sign In</a>
            </div>
        </nav>
    </header>

    <main>
        <section class="hero">
            <div class="hero__bg__image__container">
            </div>
            <div class="hero__bg__overlay"></div>

            <div class="hero__card">
                <h1 class="hero__title">
                    Track Your Favorite Movies,<br />
                    TV Shows, and More
                </h1>
                <p class="hero__subtitle">Organize. Discover. Watch.</p>
                <p class="hero__description">
                    Ready to start tracking? Enter your email to create or restart your
                    membership.
                </p>
            </div>
        </section>

        <section class="join__cards__section">
            <h2 class="join__heading">Why Use TrackFlix?</h2>
            <div class="join__card__container">
                <div class="join__card">
                    <h3>Track Everything</h3>
                    <p>Easily keep track of what you've watched and what's next.</p>
                    <img src="https://img.icons8.com/?size=100&id=12844&format=png&color=000000" alt="TV Icon">
                </div>
                <div class="join__card">
                    <h3>Plan Your Watchlist</h3>
                    <p>Add movies and shows to your custom lists anytime, anywhere.</p>
                    <img src="https://img.icons8.com/?size=100&id=12318&format=png&color=000000" alt="Plan Icon">
                </div>
                <div class="join__card">
                    <h3>Discover New Content</h3>
                    <p>Browse trending shows and movies across genres and platforms.</p>
                    <img src="https://img.icons8.com/?size=100&id=12069&format=png&color=000000" alt="Watch Icon">
                </div>
                <div class="join__card">
                    <h3>Made for You</h3>
                    <p>Personalized dashboard and lists for your unique watch style.</p>
                    <img src="https://img.icons8.com/?size=100&id=YegLEXPIUlMf&format=png&color=000000" alt="Kids Icon">
                </div>
            </div>
        </section>

        <section class="FAQ__list__container">
            <h1 class="FAQ__heading">Frequently Asked Questions</h1>

            <div class="FAQ__list">
                <div class="FAQ__accordian">
                    <button class="FAQ__title">
                        What is TrackFlix?
                        <span class="arrow">&#9660;</span>
                    </button>
                    <div class="FAQ__visible">
                        <p>TrackFlix is a service that helps you manage your TV shows, movies, anime, and documentaries across statuses like Watched, Dropped, or Plan to Watch.</p>
                        <p>You can organize everything in one place, across all your devices.</p>
                    </div>
                </div>

                <div class="FAQ__accordian">
                    <button class="FAQ__title">
                        How much does TrackFlix cost?
                        <span class="arrow">&#9660;</span>
                    </button>
                    <div class="FAQ__visible">
                        <p>TrackFlix is free to use and always will be. Just sign up and start organizing!</p>
                    </div>
                </div>

                <div class="FAQ__accordian">
                    <button class="FAQ__title">
                        Where can I watch?
                        <span class="arrow">&#9660;</span>
                    </button>
                    <div class="FAQ__visible">
                        <p>Track anywhere on your phone, tablet, or computer. All your data is synced online.</p>
                    </div>
                </div>

                <div class="FAQ__accordian">
                    <button class="FAQ__title">
                        How do I cancel?
                        <span class="arrow">&#9660;</span>
                    </button>
                    <div class="FAQ__visible">
                        <p>You can remove your account at any time directly from your profile page. No commitments.</p>
                    </div>
                </div>

                <div class="FAQ__accordian">
                    <button class="FAQ__title">
                        What can I watch from TrackFlix?
                        <span class="arrow">&#9660;</span>
                    </button>
                    <div class="FAQ__visible">
                        <p>TrackFlix helps you log all types of content — movies, series, documentaries, anime, and more.</p>
                    </div>
                </div>

                <div class="FAQ__accordian">
                    <button class="FAQ__title">
                        Is TrackFlix good for kids?
                        <span class="arrow">&#9660;</span>
                    </button>
                    <div class="FAQ__visible">
                        <p>TrackFlix helps you create lists for kids too, to keep their watchlist separate and safe.</p>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer>
        <div class="footer__row__1">
            <h4>Questions? Contact us at support@trackflix.com</h4>
        </div>
        <div class="footer__row__2">
            <div class="column__1">
                <p>FAQ</p>
                <p>Privacy</p>
                <p>Terms</p>
                <p>Support</p>
            </div>
            <div class="column__2">
                <p>Track Lists</p>
                <p>Watch Guide</p>
                <p>Feedback</p>
                <p>Media Kit</p>
            </div>
            <div class="column__3">
                <p>Account</p>
                <p>Mobile Access</p>
                <p>Legal</p>
                <p>Explore</p>
            </div>
            <div class="column__4">
                <p>Our Story</p>
                <p>Blog</p>
                <p>Contact Us</p>
            </div>
        </div>
        </div>
        <div class="footer__row__4">
            <p>TrackFlix</p>
        </div>
    </footer>
    <script>
        const faqs = document.querySelectorAll('.FAQ__accordian');
        faqs.forEach(faq => {
          faq.querySelector('.FAQ__title').addEventListener('click', () => {
            faq.classList.toggle('active');
          });
        });
    </script>
</body>
</html>