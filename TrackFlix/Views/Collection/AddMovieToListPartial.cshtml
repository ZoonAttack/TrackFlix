@using TrackFlix.Data.Utility
@model AddToListViewModel

<link rel="stylesheet" href="~/css/AddToListPartial.css" />

<div class="poster-column">
    <img src="@Model.Movie.PosterURL" alt="@Model.Movie.Title" class="modal-poster" />
</div>
<div class="details-column">
    <h2 class="modal-title">@Model.Movie.Title (@Model.Movie.ReleaseDate)</h2>

    <form id="movie-add-to-list-form">
        <input type="hidden" name="MovieId" value="@Model.FormModel.MovieId" />
        <input type="hidden" name="UserId" value="@Model.FormModel.UserId" />

        <div class="form-group">
            <label>Status</label>
            <select name="Status" class="form-control">
                @foreach (WatchStatus status in Enum.GetValues(typeof(WatchStatus)))
                {
                    <option value="@status">@status</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Rating</label>
            <select name="Rating" class="form-control">
                @for (int i = 0; i <= 10; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Note</label>
            <textarea name="Note" class="form-control" rows="4"></textarea>
        </div>

        <div class="modal-actions">
            <button type="submit" class="action-btn">Submit</button>
        </div>
    </form>
</div>
